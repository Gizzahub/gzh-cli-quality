#!/bin/bash
# gzh-cli-quality pre-commit hook
#
# Installation:
#   cp hooks/pre-commit .git/hooks/pre-commit
#   chmod +x .git/hooks/pre-commit
#
# Or use the install script:
#   bash hooks/install.sh

set -e

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Configuration
GZQ_CMD=${GZQ_CMD:-"gzq"}
GZQ_MODE=${GZQ_MODE:-"check"}  # Options: check, format, run
GZQ_FLAGS=${GZQ_FLAGS:-"--staged"}

echo -e "${BLUE}üîç Running gzh-cli-quality pre-commit hook...${NC}"

# Check if gzq is installed
if ! command -v "$GZQ_CMD" &> /dev/null; then
    echo -e "${RED}‚ùå gzq not found in PATH${NC}"
    echo -e "${YELLOW}Install it with:${NC}"
    echo -e "  go install github.com/Gizzahub/gzh-cli-quality/cmd/gzq@latest"
    exit 1
fi

# Check if there are staged files
if ! git diff --cached --name-only | grep -qE '\.(go|py|js|ts|tsx|jsx|rs)$'; then
    echo -e "${YELLOW}‚ö†Ô∏è  No relevant files staged for commit${NC}"
    exit 0
fi

# Run gzq
echo -e "${BLUE}Running: $GZQ_CMD $GZQ_MODE $GZQ_FLAGS${NC}"

if $GZQ_CMD $GZQ_MODE $GZQ_FLAGS; then
    echo -e "${GREEN}‚úÖ Quality check passed!${NC}"
    exit 0
else
    echo -e "${RED}‚ùå Quality check failed${NC}"
    echo -e "${YELLOW}Fix the issues above or use:${NC}"
    echo -e "  git commit --no-verify  ${YELLOW}(to skip this check)${NC}"
    echo -e "  gzq run --staged --fix  ${YELLOW}(to auto-fix formatting)${NC}"
    exit 1
fi
